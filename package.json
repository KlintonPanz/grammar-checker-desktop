{
  "name": "paraphraser-menubar",
  "version": "1.0.0",
  "description": "A beautiful paraphrasing tool with custom tones",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["paraphrasing", "writing", "electron", "productivity", "ai"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "menubar": "^9.3.0"
  },
  "build": {
    "appId": "com.paraphraser.menubar",
    "productName": "Paraphraser",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Paraphraser",
      "verifyUpdateCodeSignature": false,
      "executableName": "Paraphraser",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Paraphraser"
    }
  }
}